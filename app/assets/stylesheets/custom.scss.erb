@import "bootstrap-sprockets";
@import "bootstrap";
@import 'bootstrap/theme';

body {
  padding-bottom: 40px;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav {
  position: absolute;
  width: 100%;
}

nav.fixed {
  position: fixed;
  top: 0;
  z-index: 3;
}


.nav.navbar-nav.pull-right .basket {
  background: transparent image-url('<%= asset_path 'shopping-cart.png' %>') no-repeat right top ;
  height: 50px;
  width: 61px;
}

.dropdown {
  .dropdown-menu.dropdown-menu-right {
    min-width: 300px;
  }

  .total_items {
    background: #fb3f4c none repeat scroll 0 0;
    border-radius: 50%;
    color: #fff;
    font-size: 16px;
    height: 1.35294em;
    line-height: 1.35294em;
    position: absolute;
    right: 5px;
    text-align: center;
    top: 2px;
    width: 1.35294em;
    z-index: 1;
  }

  .container {
    width: 100%;
  }

  .to-basket {
    background: transparent image-url('small-basket') no-repeat left center;
    padding: 5px 0 5px 40px;
    margin-left: 10px;
    &:hover {
      background: transparent image-url('small-basket') no-repeat left center;
      color: #398439;
    }
  }
}

.shop-name {
  margin-top: 10px;
  font-size: 20px;

  a:hover {
    text-decoration: none;
    color: #337ab7;
  }
}

.featurette-divider {
  margin: 80px 0;
}

.to-top {
  position: fixed;
  bottom: 30px;
  right: 50px;
  display: none;
  font-size: 20px;
  width: 52px;
  height: 52px;
  background: transparent image-url('acapo_icons_web_top.png') no-repeat left top;
  &:hover {
    background-position: 0px -52px;
  }
}
.dropdown {
  .en {
    padding-left: 32px;
    background: transparent image-url('en.png') no-repeat left top;
    &:hover {
      background-image: image-url('en.png');
      background-repeat: no-repeat;
      background-color: #E8E8E8;
    }
  }

  .ua {
    padding-left: 32px;
    background: transparent image-url('ua.png') no-repeat left top;
    &:hover {
      background-image: image-url('ua.png');
      background-repeat: no-repeat;
      background-color: #E8E8E8;
    }
  }
}
.wrapper {
  background: transparent image_url('slide2.jpg') no-repeat fixed 0 0;
}
#back {
  height: 200px;
  background: rgba(0, 0, 0, 0) url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAECAYAAACzzX7wAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAACBJREFUeNpiYGBgsAZiViSMzscrac1AQBJuAk5rAAIMAJWsAlHLAAfDAAAAAElFTkSuQmCC") repeat scroll left top;
}

footer {
  text-align: center;
  a {
    color: #000;
    transition: color 0.3s ease 0s;
    &:hover {
      color: #9b59b6;
    }
  }
  .visa {
    background: transparent image_url('3d-secure-logos.png') no-repeat 0 0;
    width: 554px;
    height: 152px;
    display: block;
    margin: 0 auto;
  }
}

.sidebar-module {
  margin: 0 -15px 15px;
  padding: 15px;
}

.sidebar-module-inset {
  background-color: #f5f5f5;
  border-radius: 4px;
  padding: 15px;
}
