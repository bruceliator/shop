<li class="dropdown">
  <a href="#" class="basket" data-toggle="dropdown"></a>
  <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation">
      <div class="container">
        <p>
          <%= t('theme.header.total_items', count: current_order.total_items) %>
          <%= number_to_currency current_order.total_before_tax %>.
        </p>
        <%= link_to t('buttons.checkout'), checkout_path, class:'btn btn-success' %>
      </div>
    </li>
    <li role="presentation" class="divider"></li>
    <li>
      <%= link_to t('buttons.view_basket'), basket_path, class:'to-basket'  %>
    </li>
  </ul>
  <span class="total_items"><%= current_order.total_items %></span>
</li>
