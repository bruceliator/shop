<div class="row title">
  <div class="col-lg-12 text-center">
    <h2 class="title"><%= t('titles.change_pass') %></h2>
    <hr class="star-primary">
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t('devise.new_pass'), class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('devise.confirm_new_pass'), class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit t('devise.links.change_pass'), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
